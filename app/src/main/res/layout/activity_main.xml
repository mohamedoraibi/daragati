<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/student_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.16"
            android:id="@+id/studentNameTextView"/>
    <TextView
            android:text="@string/first_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstSemesterTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/studentNameTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/mid_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/midYearTextView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/firstSemesterTextView"/>
    <TextView
            android:text="@string/second_semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondSemesterTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.501" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/midYearTextView"/>
    <TextView
            android:text="@string/final_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalExamTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/secondSemesterTextView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="@string/final_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalResultTextView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/finalExamTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>